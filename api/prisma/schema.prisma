generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome_completo String   @db.VarChar(50)
  login         String   @unique @db.VarChar(50)
  tipo          String   @db.VarChar(20)
  especialidade String?  @db.VarChar(30)
  status        String   @db.VarChar(10)
  createdAt     DateTime @default(now()) @db.Timestamptz
}

model PreceptorPaciente {
  id                    Int       @id @default(autoincrement())
  preceptorId          Int
  medicalRecord        String
  status               String
  red2green            String
  scheduledDeactivationAt DateTime? @db.Timestamptz
  scheduledDeletionAt  DateTime? @db.Timestamptz
  createdAt            DateTime  @default(now()) @db.Timestamptz
  updatedAt            DateTime  @updatedAt @db.Timestamptz
  questionnaires       Questionnaire[]

  @@map("preceptor_paciente")
}

model Questionnaire {
  id                  Int               @id @default(autoincrement())
  preceptorPacienteId Int
  dischargeDate       DateTime          @db.Timestamptz
  clinicalCriteria    String
  characteristics     String[]
  needsAdmission      String
  outpatient          String
  waitingType         String[]
  examDetails         String[]
  dischargeConfirmed  Boolean
  red2green           String            @db.VarChar(20)
  createdAt           DateTime          @default(now()) @db.Timestamptz
  preceptorPaciente   PreceptorPaciente @relation(fields: [preceptorPacienteId], references: [id])
}

enum Role {
  NIR
  Assistencial
  Admin
}

enum Status {
  Active
  Inactive
}
