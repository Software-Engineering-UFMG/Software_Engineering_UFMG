generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome_completo String   @db.VarChar(50)
  login         String   @unique @db.VarChar(50)
  tipo          String   @db.VarChar(20)
  especialidade String?  @db.VarChar(30)
  status        String   @db.VarChar(10)
  createdAt     DateTime @default(now()) @db.Timestamp(6)
}

model PreceptorPaciente {
  id                    Int       @id @default(autoincrement())
  preceptorId           Int
  medicalRecord         String
  status                String
  red2green             String
  scheduledDeactivationAt DateTime? @db.Timestamp(6)
  scheduledDeletionAt   DateTime? @db.Timestamp(6)
  createdAt             DateTime  @default(now()) @db.Timestamp(6)
  updatedAt             DateTime  @updatedAt @db.Timestamp(6)
  questionnaires        Questionnaire[]

  @@map("preceptor_paciente")
}

model Questionnaire {
  id                  Int               @id @default(autoincrement())
  preceptorPacienteId Int
  dischargeDate       DateTime          @db.Timestamp(6)
  clinicalCriteria    String
  characteristics     String
  needsAdmission      String
  outpatient          String
  waitingType         String
  examDetails         String
  dischargeConfirmed  Boolean
  red2green           String            @db.VarChar(20)
  createdAt           DateTime          @default(now()) @db.Timestamp(6)
  preceptorPaciente   PreceptorPaciente @relation(fields: [preceptorPacienteId], references: [id])
}